<form class="{{cssClass}} theexpanse-system item colorset-{{colorScheme}} colorset-selection" autocomplete="off">

    <div class="sheet-content item-stats talent">
        <div class="flexcol">
            {{#if inChat}}
            <div class="item-card-title colorset-first-tier" type="text">{{name}}</div>
            {{else}}
            <input name="name" class="item-card-title colorset-first-tier" type="text" value="{{item.name}}" placeholder="{{localize "theexpanse-system.item.name"}}"/>
            {{/if}}
            <div class="item-card-stats flexrow">
                
                {{!-- Item Image --}}
                {{> "systems/theexpanse-system/templates/partials/item-image-sheet-card.hbs"}} 
                
                {{!-- Degree Level --}}
                <div class="flexcol">
                    <label>{{localize "theexpanse-system.talentDegree"}}</label>
                    {{#if inChat}}
                    <div class="data-input">{{data.data.shortDesc}}</div>
                    {{else}}
                    <input type="text" name="data.shortDesc" value="{{data.data.shortDesc}}" placeholder="{{localize "theexpanse-system.talentDegree"}}" />
                    {{/if}}
                </div>
            </div>
            
            {{!-- Active Bonuses --}}
            {{> "systems/theexpanse-system/templates/partials/active-bonuses.hbs"}}
            

            {{#if inChat}}
            {{!-- Description --}}
            <div class="item-card-desc">
                <label>{{localize "theexpanse-system.item.desc"}}</label>
                {{editor content=data.data.longDesc target="data.longDesc" button=true owner=owner editable=true}}
            </div>
            {{/if}}

        </div>

        {{#if inChat}}
        {{else}}
        {{!-- Tab Control --}}
        {{> "systems/theexpanse-system/templates/partials/bonus-desc-sheet.hbs"}}
        {{/if}}

    </div>
</form>
