
{{#if inChat}}
<div class="flexcol flex-align-center">
    <label style="white-space: nowrap;">{{localize "theexpanse-system.abl"}} ({{localize "theexpanse-system.focus"}})</label>
    <p style="white-space: nowrap;">{{localize (concat "theexpanse-system." data.data.useAbl)}} ({{data.data.useFocus}})</p>
</div>
{{else}}
{{!-- Ability to activate item --}}
<div class="flexcol">
    <label>{{localize "theexpanse-system.abl"}}</label>
    <select name="data.useAbl" class="data-input">
        {{#select data.data.useAbl}}
        {{#each config.abilities as |name type|}}
        <option value="{{type}}">{{localize name}}</option>
        {{/each}}
        {{/select}}
    </select>
</div>

{{!-- Focus used to activate the power --}}
<div class="flexcol">
    <label>{{localize "theexpanse-system.focus"}}</label>
    <input name="data.useFocus" class="data-input" type="text" value="{{data.data.useFocus}}" placeholder="Focus Name" list="{{item.type}}-{{item.id}}-list"/>
    <datalist id="{{item.type}}-{{item.id}}-list">
        <option value=""></option>
        {{#each config.focus as |focus|}}
        <option value="{{focus.name}}"></option>
        {{/each}}
    </datalist>
</div>
{{/if}}