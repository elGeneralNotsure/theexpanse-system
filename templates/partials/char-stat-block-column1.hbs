{{!-- Weapons and Attacks --}}
<ul class="flexcol weapon-table font-small-table column-width block-item">
    <li class="flexrow header">
        <span class="weapon-name">{{localize "theexpanse-system.weapon"}}</span>
        <span class="weapon-attack">{{localize "theexpanse-system.settings.attack"}}</span>
        <span class="weapon-damage">{{localize "theexpanse-system.item.damage"}}</span>
    </li>
    {{#each (equippedwpn data.weapon) as |item|}}
    <li class="item-name item-box feature-controls flexrow body colorset-second-tier" data-item-id="{{item._id}}">
        <a class="weapon-name item-show">{{item.name}}{{#if (ne item.data.quantity 1)}} ({{item.data.quantity}}){{/if}}</a>
        <a class="weapon-attack roll-item">{{#if (gte item.data.atkRollMod 0)}}+{{/if}}{{item.data.atkRollMod}}</a>
        <a class="weapon-damage roll-damage">{{item.data.dmgFormula}}</a>
    </li>
    {{/each}}
    {{#each (dmgpower data.power) as |item|}}
    <li class="item-name item-box feature-controls flexrow body colorset-second-tier" data-item-id="{{item._id}}">
        <a class="weapon-name item-show">{{item.name}}{{#if item.data.hasHealing}} <i class="fa fa-heartbeat"></i>{{/if}}</a>
        <a class="weapon-attack roll-item">{{#if (gte item.data.atkRollMod 0)}}+{{/if}}{{item.data.atkRollMod}}</a>
        <a class="weapon-damage roll-damage">{{item.data.dmgFormula}}</a>
    </li>
    {{/each}}
</ul>

{{!-- Special Qualities --}}
<ul class="special-quality-table font-small-table column-width block-item">
    <li class="header">{{localize "theexpanse-system.specialQualities"}}</li>

    {{!-- Equipment --}}
    {{#if (carriedequip items)}}
    <li class="flexrow equipment-list description body item-box">
        <p>
            <span class="quality-label colorset-second-tier">{{localize "theexpanse-system.equipment"}}:</span>
            {{#each (carriedequip items) as |item|}}
            <span class="item-name feature-controls" data-item-id="{{item._id}}">
                <span class="item-name">&nbsp<a class="item-control item-equip {{#unless item.data.equiped}} not-equiped{{/unless}}" title="{{localize "theexpanse-system.settings.equip"}}"><i class="fas fa-shield-alt"></i></a> <a class="item-show">{{item.name}}{{#if (ne item.data.quantity 1)}} ({{item.data.quantity}}){{/if}}</a>{{#if @last}}.{{else}},{{/if}}</span>
            </span>
            {{/each}}
        </p>
    </li>
    {{/if}}
    {{!-- Stunts --}}
    {{#if data.stunts}}
    <li class="flexrow description body item-box">
        <p>
            <span class="quality-label colorset-second-tier">{{localize "theexpanse-system.settings.stunts"}}:</span>
            {{#each data.stunts as |item|}}
            <span class="item-name feature-controls" data-item-id="{{item._id}}">
                <a class="item-name item-show">&nbsp[{{item.data.stuntPoints}} {{localize "theexpanse-system.settings.stuntPointsIndex"}}] {{item.name}}{{#if @last}}.{{else}},{{/if}}</a>
            </span>
            {{/each}}
        </p>
    </li>
    {{/if}}
    {{!-- Talents --}}
    {{#if data.talent}}
    <li class="flexrow description body item-box">
        <p>
            <span class="quality-label colorset-second-tier">{{localize "theexpanse-system.talent"}}:</span>
            {{#each data.talent as |item|}}
            <span class="item-name feature-controls" data-item-id="{{item._id}}">
                <span class="item-name">&nbsp<a class="item-control item-equip {{#unless item.data.activate}} not-equiped{{/unless}}" title="{{localize "theexpanse-system.settings.equip"}}"><i class="fas fa-shield-alt"></i></a> <a class="item-show">{{item.name}}{{#if item.data.shortDesc}} ({{item.data.shortDesc}}){{/if}}</a>{{#if @last}}.{{else}},{{/if}}</span>
            </span>
            {{/each}}
        </p>
    </li>
    {{/if}}

    {{!-- Powers --}}
    {{#each data.power as |item|}}
    <li class="item-box description body feature-controls" data-item-id="{{item._id}}">
        <label class="quality-label colorset-second-tier">
            <a class="item-control item-equip {{#unless item.data.activate}} not-equiped{{/unless}}" title="{{localize "theexpanse-system.settings.equip"}}"><i class="fas fa-shield-alt"></i></a> <a class="item-show">{{item.name}}</a>
            <a class="item-control roll-item" title="{{localize "theexpanse-system.settings.attack"}}"><i class="fas fa-dice"></i></a>
            {{#if item.data.causeDamage}}                            
            <a class="item-control roll-damage" title="{{localize "theexpanse-system.rollDamage"}}"><i class="fas fa-fist-raised"></i></a>
            {{/if}}
            {{#if item.data.causeHealing}}
            <a class="item-control roll-damage" title="{{localize "theexpanse-system.rollHealing"}}"><i class="fa fa-heartbeat"></i></a>
            {{/if}}
        </label>
        <div>{{{item.data.longDesc}}}</div>
    </li>
    {{/each}}
</ul>